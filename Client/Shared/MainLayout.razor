@inherits LayoutComponentBase
<MudThemeProvider/>
<MudDialogProvider
 FullWidth="false"
    MaxWidth="MaxWidth.ExtraExtraLarge"
    CloseButton="false"
    DisableBackdropClick="false"
    NoHeader="true"
    Position="DialogPosition.Center"
    CloseOnEscapeKey="true"/>
<MudSnackbarProvider/>


<MudLayout class="ms_main_wrapper">
    <MudPaper Elevation="0" class="ms_sidemenu_wrapper">
        <NavMenu />
    </MudPaper>

<div class="ms_content_wrapper padder_top80">  

    <TopHeader/>
   

        @Body
    <Footer />
</div>

</MudLayout>
<div class="ms_register_popup">
    <RegisterModal/>
    <LoginModal/>
</div>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
